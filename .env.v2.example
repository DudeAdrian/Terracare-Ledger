# TerraCare Ledger v2.0 - Participation Layer Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# NETWORK CONFIGURATION
# =============================================================================
TERRACARE_RPC_URL=http://localhost:8545
TERRACARE_CHAIN_ID=1337
DEPLOYER_PRIVATE_KEY=0x...

# =============================================================================
# CONTRACT ADDRESSES (Populated after deployment)
# =============================================================================
# Core Contracts (v1.0)
TERRACARE_IDENTITY_REGISTRY=0x...
TERRACARE_ACCESS_CONTROL=0x...
TERRACARE_RECORD_REGISTRY=0x...
TERRACARE_AUDIT_LOG=0x...

# Participation Layer (v2.0)
TERRACARE_TOKEN_ENGINE=0x...
TERRACARE_ACTIVITY_REGISTRY=0x...
TERRACARE_REVENUE_DISTRIBUTOR=0x...
TERRACARE_GOVERNANCE_BRIDGE=0x...

# =============================================================================
# SEAL INVESTOR CONFIGURATION
# =============================================================================
# Primary SEAL investor address
SEAL_INVESTOR_ADDRESS=0x...

# Initial investment amount in wei ($750K equivalent)
SEAL_INVESTMENT_AMOUNT=750000000000000000000000

# Repayment cap multiplier (300-500 = 3x-5x)
SEAL_CAP_MULTIPLIER=300

# =============================================================================
# TREASURY ADDRESSES
# =============================================================================
# User token buyback treasury
USER_BUYBACK_TREASURY=0x...

# Operations fund treasury
OPERATIONS_TREASURY=0x...

# Emergency reserve treasury
RESERVE_TREASURY=0x...

# =============================================================================
# INITIAL VALIDATORS (PoA Phase)
# =============================================================================
# Comma-separated list of validator addresses
INITIAL_VALIDATORS=0x...,0x...,0x...

# Required validator signatures for multi-sig
REQUIRED_VALIDATOR_SIGNATURES=2

# =============================================================================
# AI ORACLE CONFIGURATION
# =============================================================================
# AI Signer private key (for signing activity proofs)
AI_SIGNER_PRIVATE_KEY=0x...

# AI Signer public address (derived from private key)
AI_SIGNER_ADDRESS=0x...

# Oracle public keys (comma-separated, for multi-oracle setup)
ORACLE_PUBLIC_KEYS=0x...,0x...

# Maximum activities per hour per user (anti-gaming)
MAX_ACTIVITIES_PER_HOUR=50

# =============================================================================
# BACKEND SERVICE CONFIGURATION
# =============================================================================
# Backend wallet for subsidizing gas
BACKEND_PRIVATE_KEY=0x...

# JWT secret for API authentication
JWT_SECRET=your-super-secret-jwt-key

# Server port
PORT=4000

# =============================================================================
# WEBHOOK CONFIGURATION
# =============================================================================
# Stripe webhook secret
STRIPE_WEBHOOK_SECRET=whsec_...

# NDIS webhook secret
NDIS_WEBHOOK_SECRET=...

# Generic webhook secret (for other payment providers)
GENERIC_WEBHOOK_SECRET=...

# =============================================================================
# EXTERNAL API KEYS
# =============================================================================
# ETH price feed (for revenue calculations)
# Use Chainlink or similar oracle
ETH_PRICE_FEED_URL=https://api.coingecko.com/api/v3/simple/price

# IPFS configuration (for activity data storage)
IPFS_NODE_URL=https://ipfs.infura.io:5001
IPFS_PROJECT_ID=...
IPFS_PROJECT_SECRET=...

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql://user:password@localhost:5432/terracare

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
# Log level (debug, info, warn, error)
LOG_LEVEL=info

# Sentry DSN for error tracking (optional)
SENTRY_DSN=https://...@sentry.io/...

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable/disable activity tracking
ENABLE_ACTIVITY_TRACKING=true

# Enable/disable token buybacks
ENABLE_BUYBACKS=true

# Enable/disable governance proposals
ENABLE_GOVERNANCE=true

# Enable/disable SEAL payments
ENABLE_SEAL_PAYMENTS=true

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================
# Use test oracles (for development)
USE_TEST_ORACLES=false

# Skip webhook signature verification (for development only!)
SKIP_WEBHOOK_VERIFICATION=false

# Auto-mine activities (for load testing)
AUTO_MINE_ACTIVITIES=false
